/dts-v1/;
/ {
    compatible = "bv,yellow-bv";
    model = "Yellow's BV - Dual Cortex-A9";
    
    #address-cells = <1>;
    #size-cells = <1>;

    aliases {
        serial0 = &serial0;
        serial1 = &serial1;
        gpio0   = &gpio0;
    };

    chosen {
        bootargs = "ignore_loglevel rw root=/dev/nfs ip=on";
        stdout-path = "serial0:115200n8";
    };

    cpus {
        #address-cells = <1>;
        #size-cells = <0>;

        cpu@0 {
            device_type = "cpu";
            compatible = "arm,cortex-a9";
            reg = <0>;
        };

        cpu@1 {
            device_type = "cpu";
            compatible = "arm,cortex-a9";
            reg = <1>;
        };
    };

    soc {
        compatible = "simple-bus";
        #address-cells = <1>;
        #size-cells = <1>;
        ranges;

        serial0: serial@101b1000 {
            compatible = "arm,bv011";
            reg = <0x101b1000 0x1000>;
        };

        serial1: serial@101b2000 {
            compatible = "arm,bv011";
            reg = <0x101b2000 0x1000>;
        };

        gpio0: gpio@101b3000 {
            compatible = "arm,bv061";
            reg = <0x101b3000 0x1000>;
        };

        spi@10180000 {
            compatible = "arm,bv022";
            reg = <0x10180000 0x1000>;
        };

        i2c@10190000 {
            compatible = "bv,bv-i2c-bus";
            reg = <0x10190000 0x1000>;
            #address-cells = <1>;
            #size-cells = <0>;

            rtc@68 {
                compatible = "bv,ds1338";
                reg = <0x68>;
            };
        };
    };
};
